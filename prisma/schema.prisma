generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model blog {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  content           String
  date              DateTime @db.Date
  description       String
  file_name         String
  img_author        String
  img_header_url    String
  img_provider      String
  img_thumbnail_url String
  slug              String @unique
  title             String
}

model views {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  slug              String @unique
  count             Int
}

model likes {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  slug              String @unique
  sessions          String[]
  count             Int
}
